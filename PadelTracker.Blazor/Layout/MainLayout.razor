@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudStack Row="true" Spacing="2">
            <MudText>Padel Tracker</MudText>
            <MudIcon Icon="@Icons.Material.Filled.SportsTennis"/>
        </MudStack>
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always" @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pt-4" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle() => _drawerOpen = !_drawerOpen;
}